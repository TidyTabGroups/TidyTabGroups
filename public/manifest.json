{
  "manifest_version": 3,

  "name": "Tidy Tabs",
  "description": "The easiest way to keep 'tabs' on everything happening in your work, studies and life.",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage", "tabs", "tabGroups", "alarms"],

  "host_permissions": ["<all_urls>"]
}
