{
  "manifest_version": 3,

  "name": "Tidy Tabs â€“ More focus, less clutter",
  "description": "Keeps your active tab or group positioned at the end for enhanced focus and automatically collapses tab groups to reduce clutter.",
  "version": "1.0",
  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage", "tabs", "tabGroups", "action", "scripting"],

  "host_permissions": ["<all_urls>"]
}
