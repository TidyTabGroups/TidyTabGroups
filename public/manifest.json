{
  "manifest_version": 3,

  "name": "Tidy Tab Bar",
  "description": "Keep your active tab/group positioned at the end of your tab bar â€” for more focus and less clutter.",
  "version": "1.0",
  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage", "tabs", "tabGroups", "action", "scripting"],

  "host_permissions": ["<all_urls>"]
}
