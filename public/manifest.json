{
  "manifest_version": 3,

  "name": "Tidy Tabs",
  "description": "Streamline your focus by auto-repositioning active tabs to the end and eliminate tab clutter by auto-collapsing tab groups.",
  "version": "1.0",
  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage", "tabs", "tabGroups", "action", "scripting"],

  "host_permissions": ["<all_urls>"]
}
