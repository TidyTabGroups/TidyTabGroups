{
  "manifest_version": 3,

  "name": "Tidy Tab Groups",
  "description": "Tired of tab clutter? Keep tidy by effortlessly grouping, automatically collapsing, and intelligently positioning tabs.",
  "version": "1.0",

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "48": "assets/logo_48x48.png",
    "96": "assets/logo_96x96.png"
  },

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["js/vendor.js", "js/content_script.js"],
      "run_at": "document_start"
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage", "tabs", "tabGroups", "action", "scripting"],

  "host_permissions": ["<all_urls>"]
}
